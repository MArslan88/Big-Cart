<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Price style for TextView -->
    <style name="PriceTextStyle">
        <item name="android:textColor">@color/text_parrot_green</item>
        <item name="android:textSize">@dimen/price_text</item>
        <item name="android:fontFamily">@font/poppins_med</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <!-- Product style for TextView -->
    <style name="ProductTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/prod_text</item>
        <item name="android:fontFamily">@font/poppins_sem_bold</item>
    </style>

    <!-- Toolbar style for TextView -->
    <style name="ToolbarTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:fontFamily">@font/poppins_med</item>
    </style>

    <!-- Department style for TextView -->
    <style name="departmentTextStyle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/depart_text</item>
        <item name="android:fontFamily">@font/poppins_med</item>
    </style>

    <!-- conter style for TextView -->
    <style name="counterTextStyle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:fontFamily">@font/poppins_med</item>
    </style>

    <!-- total style for TextView -->
    <style name="totalTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/total_text</item>
        <item name="android:fontFamily">@font/poppins_sem_bold</item>
    </style>
</resources>